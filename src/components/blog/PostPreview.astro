---
interface Props {
  id: string,
  title: string,
  description: string,
  pubDate: Date,
  tags: string[],
}

const { id, title, description, pubDate, tags } = Astro.props;
---

<div class="mt-5 mb-5">
  <a href={`/blog/${id}`} class="hover:opacity-90">
    <div class="flex items-center gap-4">
      <h2 class="text-lg font-semibold">{ title }</h2>
      <div class="flex-1 border-t opacity-20"></div>
      <time
        datetime={ pubDate.toISOString() }
        class="opacity-50"
      >
        { pubDate.toLocaleDateString() }
      </time>
    </div>
    <div class="text-sm opacity-75">
      <em>{ description }</em>
    </div>
    <div>
      {
        tags.map(tag => (
          <span class="me-1 text-sm">#{ tag }</span>   
        ))
      }
    </div>
  </a>
</div>
