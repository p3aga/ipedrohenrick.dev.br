---
import type { GetStaticPaths } from "astro";
import { type CollectionEntry, getCollection, render } from "astro:content";
import PostDate from "@/components/blog/PostDate.astro";
import SiteBase from "@/layouts/SiteBase.astro";

export const getStaticPaths: GetStaticPaths = async () => {
  const blogPosts = await getCollection('blog');
  return blogPosts.map(post => ({
    params: { slug: post.id },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<SiteBase title={ post.data.title }>
  <section>
    <div class="mb-10">
      <h1 class="text-4xl font-black mb-2">{ post.data.title }</h1>
      <div class="text-sm">
        <PostDate pubDate={ post.data.pubDate } />
      </div>
    </div>
    <article class="prose">
      <Content />
    </article>
  </section>
</SiteBase>
